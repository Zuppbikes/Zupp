<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="button_yellow">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:background">@drawable/yellow_round_button_selector</item>
        <item name="android:minWidth">@dimen/margin_128</item>
    </style>

    <style name="button_with_border">
        <item name="android:textColor">@color/grey_1</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:background">@drawable/yellow_border_button_selector</item>
        <item name="android:minWidth">@dimen/margin_128</item>
    </style>

    <style name="button_edit">
        <item name="android:textColor">@color/grey_1</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:minWidth">@dimen/margin_128</item>
    </style>

    <style name="text_title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <style name="text_sub_title" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="text_12">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="text_14">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="text_16">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="text_18">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="text_20">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <style name="text_24">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_24</item>
    </style>

    <style name="TextInputLayoutCustom_light">
        <item name="android:textColorHint">@color/grey_1</item>
        <item name="colorControlNormal">@color/grey_1</item>
        <item name="colorControlActivated">@color/grey_1</item>
        <item name="colorAccent">@color/grey_1</item>
    </style>

    <style name="TextInputLayoutCustom_dark" parent="TextInputLayoutCustom_light">
        <item name="android:textColorHint">@color/grey_1</item>
        <item name="colorControlNormal">@color/grey_1</item>
        <item name="colorControlActivated">@color/grey_1</item>
        <item name="colorAccent">@color/grey_1</item>
    </style>

    <style name="TextInputLayoutCustom_Hint" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/grey_1</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/edit_text_error</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="error_appearance_dark" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/edit_text_error</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DialogSlideAnim" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_in</item>
        <item name="android:windowExitAnimation">@anim/anim_out</item>
    </style>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grey_1</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>


    <!--====================================Custom Alert Dialog Styling====================================-->
    <style name="AlertDialogTheme" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/AlertTextAppearance.Title</item>
        <item name="android:textAppearance">@style/AlertTextAppearance.Text</item>
        <item name="android:buttonBarNegativeButtonStyle" tools:targetApi="lollipop">@style/AlertButton.Negative</item>
        <item name="android:buttonBarPositiveButtonStyle" tools:targetApi="lollipop">@style/AlertButton.Positive</item>
        <item name="android:buttonBarStyle">@style/AlertButtonBar</item>
        <item name="android:background">@color/white</item>
        <item name="android:fontFamily">@font/khand_bold</item>
        <item name="android:subtitleTextAppearance" tools:targetApi="lollipop">@style/AlertTextAppearance.Text</item>
        <item name="android:textAppearanceMedium">@style/AlertTextAppearance.Text</item>
    </style>

    <style name="AlertTextAppearance">
        <item name="android:textColor">@color/edit_text_hint</item>
        <item name="android:fontFamily">@font/khand_medium</item>
    </style>

    <style name="AlertTextAppearance.Title">
        <item name="android:textColor">@color/edit_text_hint</item>
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:fontFamily">@font/khand_bold</item>
    </style>

    <style name="AlertTextAppearance.Text">
        <item name="android:textColor">@color/edit_text_hint</item>
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <style name="AlertButtonBar"> <!--parent="Widget.AppCompat.ButtonBar.AlertDialog"-->
        <item name="android:padding">@dimen/margin_8</item>
        <item name="android:fontFamily">@font/khand_semibold</item>
        <item name="android:background">@color/white</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
    </style>

    <style name="AlertButton"> <!--parent="Widget.AppCompat.ButtonBar.AlertDialog"-->
        <item name="android:paddingLeft">@dimen/margin_8</item>
        <item name="android:paddingRight">@dimen/margin_8</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/khand_semibold</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="android:minHeight">@dimen/margin_32</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AlertButton.Negative">
        <item name="android:textColor">@color/edit_text_hint</item>
        <item name="android:background">@android:color/transparent</item>

    </style>

    <style name="AlertButton.Positive">
        <item name="android:layout_marginLeft">@dimen/margin_8</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--====================================Custom Alert Dialog Styling====================================-->

    <style name="MyToastTextAppearance">
        <item name="android:fontFamily">@font/khand_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16</item>

    </style>

</resources>